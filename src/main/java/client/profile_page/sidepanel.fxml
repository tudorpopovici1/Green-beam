<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import com.jfoenix.controls.*?>
<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700" prefWidth="200" stylesheets="@profile.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.profile_page.SidePanelController">
    <children>
      <Pane prefHeight="127.0" prefWidth="200">
         <children>
              <ImageView fitHeight="127.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../mainpage/images/back.jpg" />
                  </image>
              </ImageView>
            <JFXTextField fx:id="searchFriends" focusColor="#f3a978" layoutX="4.0" layoutY="87.0" maxWidth="127.0" minWidth="127.0" prefHeight="31.0" prefWidth="127.0" promptText="Search for friends" />
            <JFXButton fx:id="searchButton" layoutX="132.0" layoutY="93.0" onAction="#searchClicked" prefHeight="20.0" prefWidth="64.0" styleClass="buttonsfriends" stylesheets="@profile.css" text="SEARCH">
               <font>
                  <Font name="Gotham-Bold" size="11.0" />
               </font>
            </JFXButton>
            <Pane fx:id="searchBarBox" layoutX="-110.0" layoutY="95.0" prefHeight="200.0" prefWidth="110.0" style="-fx-background-color: white;">
               <children>
                  <JFXListView fx:id="foundFriends" prefHeight="173.0" prefWidth="110.0" />
                  <JFXButton fx:id="addFriendsButton" layoutY="173.0" onAction="#addFriendsClicked" prefHeight="20.0" prefWidth="110.0" styleClass="main-btnsprofile" stylesheets="@profile.css" text="ADD">
                     <font>
                        <Font name="Gotham-Bold" size="14.0" />
                     </font>
                  </JFXButton>
               </children>
            </Pane>
         </children>
      </Pane>
      <JFXListView fx:id="friendslistView" prefHeight="573.0" prefWidth="200.0" style="-fx-cell-vertical-margin: 50;" styleClass="jfx-list-view" />
      <!--<JFXPopup fx:id="popup" />-->
    </children>
</VBox>
